{
    "name": "SERL xArm Collection Env",
    "image": "serl_image:v1.5",
    "workspaceFolder": "/home/openpi",
    
    // 关键：在这里配置自动运行参数
    "runArgs": [
        // 1. 相机设备映射
        "--device=/dev/cam_high:/dev/cam_high",
        "--device=/dev/cam_left_wrist:/dev/cam_left_wrist",
        "--device=/dev/cam_right_wrist:/dev/cam_right_wrist",
        
        // 2. GUI 显示映射
        "--net=host",
        "-e", "DISPLAY=${localEnv:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
        
        // 3. 硬件加速 (如果需要 GPU)
        "--gpus=all",
        "--privileged"
    ],

    // 将你之前的扩展插件同步过来
    "extensions": [
		"batisteo.vscode-django",
		"donjayamanne.python-environment-manager",
		"donjayamanne.python-extension-pack",
		"eamodio.gitlens",
		"github.copilot",
		"github.copilot-chat",
		"kevinrose.vsc-python-indent",
		"ms-azuretools.vscode-containers",
		"ms-ceintl.vscode-language-pack-zh-hans",
		"ms-python.debugpy",
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-python.vscode-python-envs",
		"njpwerner.autodocstring",
		"percy.vscode-numpy-viewer",
		"percy.vscode-pydata-viewer",
		"shd101wyy.markdown-preview-enhanced",
		"visualstudioexptteam.intellicode-api-usage-examples",
		"visualstudioexptteam.vscodeintellicode",
		"wholroyd.jinja",
		"yzhang.markdown-all-in-one"
	],

    "settings": {
        "python.defaultInterpreterPath": "/root/anaconda3/envs/lerobot2/bin/python"
    },

    "remoteUser": "root"
}